@page
@model RazorWebApplication.Pages.Login.IndexModel

<h1>Login</h1>

<div class="w-50">
    <form method="post">
        <div class="form-group">
            <label asp-for="Username">User Name</label>
            <input class="form-control" type="text" asp-for="Username" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control"  asp-for="Password" />
        </div>

        @if (!string.IsNullOrEmpty(@Model.LoginMessage))
        {
            <p class="text-danger">@Model.LoginMessage</p>
        }
        <div class="form-group m-3">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </form>
</div>